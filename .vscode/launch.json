    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "run",
            "env": {
                "NODE_ENV": "production"
            },
            "runtimeArgs": [
                "-P",
                "${workspaceFolder}/tsconfig.json",
                "-r",
                "tsconfig-paths/register"
            ],
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/ts-node",
            "args": [
                "${workspaceFolder}/server.ts"
            ],
        },
        {
            "type": "node",
            "request": "launch",
            "name": "debug",
            "env": {
                "NODE_ENV": "production"
            },
            "runtimeArgs": [
                "-r",
                "ts-node/register",
                "-r",
                "tsconfig-paths/register"
            ],
            "args": [
                "${workspaceFolder}/server.ts"
            ],
        },
    ]
}